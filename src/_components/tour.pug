section.popular
    mixin card(args)
        .card
            .card__side.card__side--front
                .card__side__heading(class=args.heading)
                h4.card__side__title
                    span.card__side__title-span(class=args.sub)= args.title
                .card__side__content
                    ul
                        li= args.content1
                        li= args.content2
                        li= args.content3
                        li= args.content4
                        li= args.content5
            .card__side.card__side--back.text-center(class=args.back)
                .card__side__text
                    span Only
                .card__side__price
                    span= args.price
                button.btn.btn--primary Book now!
